{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: build with last config",
            "type": "shell",
            "command": "${workspaceFolder}/dev_tools/build.sh",
            "options": {
                "shell": {
                    "executable": "nix",
                    "args": [
                        "develop",
                        "-c",
                        "zsh"
                    ]
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Call build.sh with nix develop"
        },
